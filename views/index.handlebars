<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h2>Burgers To Devour</h2>
            <ul class="list-group minHeight" style="list-style:none;">
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devour=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-4">
            <img src="../assets/img/burger.jpg" class="responsive" />
            <h2>Add a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="addBurger">Name of Burger:</label>
                    <input type="text" id="addBurger" name="burger_name">
                    <button type="submit">Add Burger</button>
                </div>
            </form>
        </div>
        <div class="col-sm-4">
            <h2>Burgers Already Devoured</h2>
            <ul class="list-group minHeight"  style="list-style:none;">
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devour=false}}
                    {{/if}}
                {{/each}}
            </ul>  
        </div>
    </div>

</div>